<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_ingame"
    android:orientation="vertical"
    android:padding="@dimen/dp16"
    tools:context="com.pguese.pfcwa.activity.FlashcardActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/ivSpeak"
        android:layout_below="@id/ivHome"
        android:layout_marginBottom="@dimen/ndp16"
        android:layout_marginTop="@dimen/ndp16"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dp8"
            android:layout_weight="45"
            android:gravity="right"
            android:orientation="vertical">


            <com.pguese.pfcwa.widgets.TextViewCG
                android:id="@+id/tvFlashcard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Aa"
                android:textSize="@dimen/textSizeFlashcardXL" />

            <com.pguese.pfcwa.widgets.TextViewCG
                android:id="@+id/tvObject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Watermelon"
                android:textSize="@dimen/textSizeFlashcardMedium" />

        </LinearLayout>

        <ImageView
            android:id="@+id/ivFlashcard"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="55"
            android:adjustViewBounds="true"
            android:src="@drawable/img_no_resource" />

    </LinearLayout>

    <ImageView
        android:id="@+id/ivHome"
        android:layout_width="@dimen/menu_button_default_size"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:paddingBottom="@dimen/dp16"
        android:paddingRight="@dimen/dp16"
        android:src="@drawable/img_home" />

    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="@dimen/menu_button_default_size"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:adjustViewBounds="true"
        android:paddingBottom="@dimen/dp8"
        android:paddingTop="@dimen/dp8"
        android:src="@drawable/img_back_v2" />

    <ImageView
        android:id="@+id/ivSpeak"
        android:layout_width="@dimen/menu_button_default_size"
        android:layout_height="@dimen/menu_button_default_size"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:adjustViewBounds="true"
        android:paddingLeft="@dimen/dp16"
        android:paddingTop="@dimen/dp16"
        android:src="@drawable/img_speak_v2" />

</RelativeLayout>
