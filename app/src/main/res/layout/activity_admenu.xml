<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_menu"
    android:orientation="vertical"
    tools:context="com.pguese.pfcwa.activity.ADMenuActivity">

    <com.pguese.pfcwa.widgets.ButtonCG
        android:id="@+id/btnADAlphabet"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp48"
        android:layout_above="@+id/view"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:text="Alphabet"
        android:textSize="@dimen/textSizeNormal" />

    <View
        android:id="@+id/view"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_centerInParent="true" />

    <com.pguese.pfcwa.widgets.ButtonCG
        android:id="@+id/btnADVocabulary"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp48"
        android:layout_below="@+id/view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp8"
        android:text="Vocabulary"
        android:textSize="@dimen/textSizeNormal" />

    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="@dimen/menu_button_default_size"
        android:layout_height="@dimen/menu_button_default_size"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="@dimen/menu_button_padding"
        android:src="@drawable/img_back_v2" />
</RelativeLayout>

