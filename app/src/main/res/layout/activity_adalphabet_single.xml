<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_ingame"
    android:orientation="vertical"
    android:padding="@dimen/dp16">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ivSpeak"
        android:layout_below="@id/ivHome"
        android:layout_centerInParent="true"
        android:gravity="center">

        <com.pguese.pfcwa.widgets.TextViewCG
            android:id="@+id/tvFC1"
            android:layout_width="@dimen/questionBoxSizeMedium"
            android:layout_height="@dimen/questionBoxSizeMedium"
            android:layout_marginRight="@dimen/dp8"
            android:background="@drawable/background_option_red"
            android:gravity="center"
            android:text="Ww"
            android:textSize="@dimen/textSizeFlashcardMedium" />

        <com.pguese.pfcwa.widgets.TextViewCG
            android:id="@+id/tvFC2"
            android:layout_width="@dimen/questionBoxSizeMedium"
            android:layout_height="@dimen/questionBoxSizeMedium"
            android:layout_marginLeft="@dimen/dp8"
            android:layout_marginRight="@dimen/dp8"
            android:background="@drawable/background_option_yellow"
            android:gravity="center"
            android:text="Ww"
            android:textSize="@dimen/textSizeFlashcardMedium" />

        <com.pguese.pfcwa.widgets.TextViewCG
            android:id="@+id/tvFC3"
            android:layout_width="@dimen/questionBoxSizeMedium"
            android:layout_height="@dimen/questionBoxSizeMedium"
            android:layout_marginLeft="@dimen/dp8"
            android:layout_marginRight="@dimen/dp8"
            android:background="@drawable/background_option_blue"
            android:gravity="center"
            android:text="Ww"
            android:textSize="@dimen/textSizeFlashcardMedium" />

        <com.pguese.pfcwa.widgets.TextViewCG
            android:id="@+id/tvFC4"
            android:layout_width="@dimen/questionBoxSizeMedium"
            android:layout_height="@dimen/questionBoxSizeMedium"
            android:layout_marginLeft="@dimen/dp8"
            android:background="@drawable/background_option_green"
            android:gravity="center"
            android:text="Ww"
            android:textSize="@dimen/textSizeFlashcardMedium" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/dp16">

        <com.pguese.pfcwa.widgets.TextViewCG
            android:id="@+id/tvItem1"
            android:layout_width="@dimen/questionBoxSize"
            android:layout_height="@dimen/questionBoxSize"
            android:layout_marginLeft="@dimen/dp4"
            android:layout_marginRight="@dimen/dp4"
            android:background="@drawable/background_black_border"
            android:gravity="center"
            android:text="1"
            android:textSize="@dimen/questionTextSize" />

        <com.pguese.pfcwa.widgets.TextViewCG
            android:id="@+id/tvItem2"
            android:layout_width="@dimen/questionBoxSize"
            android:layout_height="@dimen/questionBoxSize"
            android:layout_marginLeft="@dimen/dp4"
            android:layout_marginRight="@dimen/dp4"
            android:background="@drawable/background_black_border"
            android:gravity="center"
            android:paddingLeft="@dimen/dp2"
            android:paddingRight="@dimen/dp2"
            android:text="2"
            android:textSize="@dimen/questionTextSize" />

        <com.pguese.pfcwa.widgets.TextViewCG
            android:id="@+id/tvItem3"
            android:layout_width="@dimen/questionBoxSize"
            android:layout_height="@dimen/questionBoxSize"
            android:layout_marginLeft="@dimen/dp4"
            android:layout_marginRight="@dimen/dp4"
            android:background="@drawable/background_black_border"
            android:gravity="center"
            android:paddingLeft="@dimen/dp4"
            android:paddingRight="@dimen/dp4"
            android:text="3"
            android:textSize="@dimen/questionTextSize" />

        <com.pguese.pfcwa.widgets.TextViewCG
            android:id="@+id/tvItem4"
            android:layout_width="@dimen/questionBoxSize"
            android:layout_height="@dimen/questionBoxSize"
            android:layout_marginLeft="@dimen/dp4"
            android:layout_marginRight="@dimen/dp4"
            android:background="@drawable/background_black_border"
            android:gravity="center"
            android:text="4"
            android:textSize="@dimen/questionTextSize" />

        <com.pguese.pfcwa.widgets.TextViewCG
            android:id="@+id/tvItem5"
            android:layout_width="@dimen/questionBoxSize"
            android:layout_height="@dimen/questionBoxSize"
            android:layout_marginLeft="@dimen/dp4"
            android:layout_marginRight="@dimen/dp4"
            android:background="@drawable/background_black_border"
            android:gravity="center"
            android:paddingLeft="@dimen/dp2"
            android:paddingRight="@dimen/dp2"
            android:text="5"
            android:textSize="@dimen/questionTextSize" />

        <com.pguese.pfcwa.widgets.TextViewCG
            android:id="@+id/tvItem6"
            android:layout_width="@dimen/questionBoxSize"
            android:layout_height="@dimen/questionBoxSize"
            android:layout_marginLeft="@dimen/dp4"
            android:layout_marginRight="@dimen/dp4"
            android:background="@drawable/background_black_border"
            android:gravity="center"
            android:paddingLeft="@dimen/dp4"
            android:paddingRight="@dimen/dp4"
            android:text="6"
            android:textSize="@dimen/questionTextSize" />

        <com.pguese.pfcwa.widgets.TextViewCG
            android:id="@+id/tvItem7"
            android:layout_width="@dimen/questionBoxSize"
            android:layout_height="@dimen/questionBoxSize"
            android:layout_marginLeft="@dimen/dp4"
            android:layout_marginRight="@dimen/dp4"
            android:background="@drawable/background_black_border"
            android:gravity="center"
            android:text="7"
            android:textSize="@dimen/questionTextSize" />

        <com.pguese.pfcwa.widgets.TextViewCG
            android:id="@+id/tvItem8"
            android:layout_width="@dimen/questionBoxSize"
            android:layout_height="@dimen/questionBoxSize"
            android:layout_marginLeft="@dimen/dp4"
            android:layout_marginRight="@dimen/dp4"
            android:background="@drawable/background_black_border"
            android:gravity="center"
            android:paddingLeft="@dimen/dp2"
            android:paddingRight="@dimen/dp2"
            android:text="8"
            android:textSize="@dimen/questionTextSize" />

        <com.pguese.pfcwa.widgets.TextViewCG
            android:id="@+id/tvItem9"
            android:layout_width="@dimen/questionBoxSize"
            android:layout_height="@dimen/questionBoxSize"
            android:layout_marginLeft="@dimen/dp4"
            android:layout_marginRight="@dimen/dp4"
            android:background="@drawable/background_black_border"
            android:gravity="center"
            android:paddingLeft="@dimen/dp4"
            android:paddingRight="@dimen/dp4"
            android:text="9"
            android:textSize="@dimen/questionTextSize" />

        <com.pguese.pfcwa.widgets.TextViewCG
            android:id="@+id/tvItem10"
            android:layout_width="@dimen/questionBoxSize"
            android:layout_height="@dimen/questionBoxSize"
            android:layout_marginLeft="@dimen/dp4"
            android:layout_marginRight="@dimen/dp4"
            android:background="@drawable/background_black_border"
            android:gravity="center"
            android:text="10"
            android:textSize="@dimen/questionTextSize" />


    </LinearLayout>

    <!--<ListView-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"></ListView>-->


    <View
        android:id="@+id/div"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/dp16" />

    <ImageView
        android:id="@+id/ivHome"
        android:layout_width="@dimen/menu_button_default_size"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:paddingBottom="@dimen/dp16"
        android:paddingRight="@dimen/dp16"
        android:src="@drawable/img_home" />

    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="@dimen/menu_button_default_size"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:adjustViewBounds="true"
        android:paddingBottom="@dimen/dp2"
        android:paddingTop="@dimen/dp2"
        android:src="@drawable/img_back_v2" />

    <ImageView
        android:id="@+id/ivSpeak"
        android:layout_width="@dimen/menu_button_default_size"
        android:layout_height="@dimen/menu_button_default_size"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:adjustViewBounds="true"
        android:paddingLeft="@dimen/dp16"
        android:paddingTop="@dimen/dp16"
        android:src="@drawable/img_speak_v2" />

</RelativeLayout>
